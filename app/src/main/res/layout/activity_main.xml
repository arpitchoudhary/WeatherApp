<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--android:background="#FFF"--><!--android:orientation="vertical">-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContentSV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay">

    <LinearLayout
        android:id="@+id/mainContentLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerContentLL"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#ff64c2f4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainTodayDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Today, April 13"
                android:textColor="#FFF"
                android:textSize="28sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff64c2f4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainCityMaxTempTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="30 °C"
                    android:textColor="#FFF"
                    android:textSize="26sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mainCityMinTempTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:text="15 °C"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/mainImageTV"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/img_sun" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff64c2f4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainCityNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Bangalore,IN"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/currentCityForecastTempTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="15dp"
                    android:text="clear"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listTempLV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</ScrollView><!--</LinearLayout>-->
